<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :password_digest %>
  <%= f.text_field :password_digest %>
  <%= f.label :happiness %>
  <%= f.text_field :happiness %>
  <%= f.label :nausea %>
  <%= f.text_field :nausea %>
  <%= f.label :height %>
  <%= f.text_field :height %>
  <%= f.label :tickets %>
  <%= f.text_field :tickets %>
  <%= hidden_field_tag "user[admin]", '' %>
  <%= check_box_tag "user[admin]", checked = true %>
<%= f.submit %>
<% end %>
